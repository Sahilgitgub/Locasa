<% layout("/layouts/boilerplate.ejs") %>

<style>
  .listing-card {
    width: 100%;
    height: 450px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
    display: flex;
    flex-direction: column;
  }

  .listing-card:hover {
    transform: scale(1.02);
  }

  .listing-img {
    height: 250px;
    object-fit: cover;
    width: 100%;
  }

  .card-body {
    flex-grow: 1;
    padding: 1.2rem;
    text-align: center;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
  }

  .card-text {
    color: #555;
    font-size: 0.95rem;
  }
</style>

<div class="container mt-4">
  <h2 class="mb-4">Results for "<%= searchQuery %>"</h2>

  <% if (results.length === 0) { %>
  <p class="text-muted">No listings found for your search.</p>
  <% } else { %>
  <div class="row">
    <% results.forEach(result => { %>
    <div class="col-md-4 mb-4">
      <div class="card listing-card">
        <% if (result.image && result.image.url) { %>
        <img
          src="<%= result.image.url %>"
          class="card-img-top listing-img"
          alt="<%= result.title %>"
        />
        <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= result.title %></h5>

          <p class="card-text">
            <%= result.description.substring(0, 100) %>...
          </p>

          <p class="card-text"><strong>â‚¹<%= result.price %></strong></p>

          <a href="/listings/<%= result._id %>" class="btn btn-outline-primary"
            >View Listing</a
          >
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } %>
</div>
