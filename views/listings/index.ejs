<% layout("/layouts/boilerPlate.ejs") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    width: 100%;
    overflow-x: auto;
    scrollbar-width: none; /* Firefox */
    margin-top: 20px;
  }

  #filters::-webkit-scrollbar {
    display: none; /* Chrome, Safari */
  }

  .filter {
    margin-top: 1rem;
    margin-right: 1rem;
    text-align: center;
    opacity: 0.7;
    flex: 0 0 auto;
    min-width: 80px;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
    margin-top: 0.2rem;
  }

  /* ðŸ”½ Mobile Responsive Adjustments */
  @media (max-width: 768px) {
    #filters {
      flex-wrap: nowrap;
      overflow-x: auto;
      padding: 0.5rem 0;
    }

    .filter {
      margin-right: 1rem;
      margin-top: 0;
      min-width: 70px;
      font-size: 0.75rem;
    }
  }

  
</style>

<div id="filters">
  <div class="filter"><div><i class="fa-solid fa-fire"></i></div><p>Trending</p></div>
  <div class="filter"><div><i class="fa-solid fa-bed"></i></div><p>Rooms</p></div>
  <div class="filter"><div><i class="fa-solid fa-mountain-city"></i></div><p>Iconic cities</p></div>
  <div class="filter"><div><i class="fa-solid fa-bolt"></i></div><p>Surfing</p></div>
  <div class="filter"><div><i class="fa-solid fa-street-view"></i></div><p>Amazing views</p></div>
  <div class="filter"><div><i class="fa-solid fa-chess-rook"></i></div><p>Castles</p></div>
  <div class="filter"><div><i class="fa-solid fa-person-swimming"></i></div><p>Amazing pools</p></div>
  <div class="filter"><div><i class="fa-solid fa-campground"></i></div><p>Camping</p></div>
  <div class="filter"><div><i class="fa-solid fa-tractor"></i></div><p>Farms</p></div>
  <div class="filter"><div><i class="fa-solid fa-snowflake"></i></div><p>Arctic</p></div>
  <div class="filter"><div><i class="fa-solid fa-mountain-sun"></i></div><p>Mountains</p></div>
  <div class="filter"><div><i class="fa-solid fa-igloo"></i></div><p>Igloo</p></div>
  <div class="filter"><div><i class="fa-solid fa-umbrella-beach"></i></i></div><p>Beech</p></div>
</div>

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 mt-4">
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "NA" %> /night
            <span style="color: gray;">&nbsp; +15% GST</span>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>
