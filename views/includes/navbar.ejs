<style>
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
    height: 38px; /* Match input height */
  }
  .btn-search:hover {
    background-color: #fe424d;
    color: #fff;
  }
  .btn-search i {
    margin-right: 0.5rem;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1rem;
  }

  /* Mobile layout */
  @media (max-width: 767.98px) {
    .navbar-container {
      display: flex;
      width: 100%;
      align-items: center;
      padding: 0.5rem 0;
    }
    
    .mobile-search-container {
      flex-grow: 1;
      margin: 0 0.5rem;
      display: flex !important;
      align-items: center;
    }
    
    .mobile-search-form {
      display: flex;
      width: 100%;
      gap: 0.5rem;
    }
    
    .mobile-search-inp {
      flex-grow: 1;
      padding: 0.5rem 1rem;
      border-radius: 25px;
      border: 1px solid #ddd;
      min-width: 120px;
    }
    
    .mobile-search-btn {
      border-radius: 25px;
      padding: 0 0.8rem;
      white-space: nowrap;
    }
    
    .navbar-collapse {
      background-color: white;
      padding: 1rem;
      border-radius: 0 0 10px 10px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
      margin-top: 0;
    }
    
    .desktop-search {
      display: none;
    }
    
    .navbar-toggler {
      margin-left: 0.5rem;
    }
  }

  /* Desktop layout */
  @media (min-width: 768px) {
    .mobile-search-container {
      display: none !important;
    }
    
    .desktop-search {
      display: flex;
    }
    
    .btn-search {
      width: 170px;
      border-radius: 2px solid black !important ;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid navbar-container">
    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-compass-drafting"></i>
    </a>
    
    <!-- Mobile Search (visible only on mobile) -->
    <div class="mobile-search-container">
      <form class="mobile-search-form" action="/listings/search" method="GET">
        <input class="form-control mobile-search-inp" type="search" name="query" placeholder="Search...">
        <button class="btn btn-primary mobile-search-btn" type="submit" style="background-color: #fe424d;">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>
    </div>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>
      
      <!-- Desktop Search (visible only on desktop) -->
      <div class="desktop-search">
        <form class="d-flex" action="/listings/search" method="GET">
          <input class="form-control me-2 search-inp" type="search" name="query" placeholder="Search destinations">
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>
      </div>
      
      <ul class="navbar-nav">
        <li class="nav-item host">
          <a class="nav-link" href="/listings/new">
            Become a host <i class="fa-solid fa-globe"></i>
          </a>
        </li>
        <% if(!currUser){ %>
        <li class="nav-item">
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/login"><b>Log in</b></a>
        </li>
        <% } %>
        <% if(currUser){ %>
        <li class="nav-item">
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>